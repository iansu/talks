    "clean": "rimraf node_modules/* packages/**/node_modules talks/**/node_modules"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2"
