{
  "name": "talks",
  "version": "1.0.0",
  "description": "A collection of slides from talks by @iansu",
  "author": "Ian Sutherland <ian@iansutherland.ca>",
  "license": "UNLICENSED",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/iansu/talks"
  },
  "workspaces": [
    "packages/*",
    "talks/*"
